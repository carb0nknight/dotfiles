{
    "editor.fontFamily": "Operator Mono Lig",
    "editor.fontLigatures":  true,
    "editor.fontSize": 12.5,
    "editor.wordWrapColumn": 120,
    "editor.rulers": [
      80,
      120
    ],
    "editor.minimap.enabled": true,
    "editor.renderControlCharacters": false,
    "editor.tokenColorCustomizations": {
      "textMateRules": [
        {
          "scope": [
            //following will be in ligatures
            "comment",
            "entity.name.type.class", //class names
            "entity.name.type.className",
            "keyword", //import, export, return…
            "storage",
            "constant", //String, Number, Boolean…, this, super
            "storage.type.function",
            "storage.modifier", //static keyword
            "storage.type.class", //class keyword
            "entity.other.attribute-name",
            "entity.other.attribute-name.html"
          ],
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "scope": [
            //following will be excluded from italics (VSCode has some defaults for italics)
            "invalid",
            "keyword.operator",
            "constant.numeric.css",
            "keyword.other.unit.px.css",
            "constant.numeric.decimal.js",
            "constant.numeric.json"
          ],
          "settings": {
            "fontStyle": ""
          }
        }
      ]
    },

    "workbench.colorTheme": "Andromeda",
    "workbench.iconTheme": "Monokai Classic Icons",
    "workbench.editorAssociations": [],
    "workbench.colorCustomizations": {
        "editor.background": "#1a1c22",
        "sideBar.background": "#252931",
        "sideBarSectionHeader.background": "#2e323d",
        "tab.activeBackground": "#2e323d",
        "terminal.background": "#1a1c22",
        "terminal.ansiRed": "#ef4e47",
        "terminal.ansiGreen": "#0af172",
        "terminal.ansiYellow": "#fae436",
        "terminal.ansiBlue": "#2599ef",
        "terminal.ansiMagenta": "#f536a4",
        "terminal.ansiCyan": "#00d3ff"
    },

    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\wsl.exe",
    "terminal.integrated.shell.linux": "/bin/zsh",
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.fontFamily": "Inconsolata-Dz for Powerline",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.rightClickBehavior": "copyPaste",
    "files.associations": {
      "*.js": "javascriptreact"
    },
    "terminal.external.osxExec": "Hyper.app",
    "terminal.explorerKind": "external"
}
